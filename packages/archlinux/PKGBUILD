# Maintainer: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
# Contributor: Jacques-Pascal Deplaix <jp.deplaix@gmail.com>
pkgname=valaterm
pkgver=0.2
pkgrel=2
pkgdesc="ValaTerm is a lightweight terminal written in Vala"
arch=(any)
url="https://gitorious.org/valaterm/"
license=('GPL3')
depends=('gtk2' 'glib2' 'vte')
makedepends=('git' 'vala' 'gcc')

build()
{
	git clone git://gitorious.org/valaterm/valaterm.git || return 1
    cd valaterm

	git checkout 0.2
    ./waf configure build || return 1

	mkdir -p $pkgdir/usr/bin/
	mkdir -p $pkgdir/usr/share/locale/fr/LC_MESSAGES/

	cp build/valaterm $pkgdir/usr/bin/
	cp build/po/fr/valaterm.mo $pkgdir/usr/share/locale/fr/LC_MESSAGES/

	chmod +x $pkgdir/usr/bin/
}